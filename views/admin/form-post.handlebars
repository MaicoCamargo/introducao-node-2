<div class="card">
    <div class="card-body">
        <h4 class="text-muted">Criar Post</h4>
        {{#each erros}}
            <div class="alert alert-danger">
                {{texto}}
            </div>
        {{else}}
        {{/each}}

        <form action="/admin/posts/criar-post" method="post">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="inputCity">Titulo</label>
                    <input name="titulo" id="titulo" placeholder="nome da titulo" type="text" class="form-control">
                </div>
                <div class="form-group col-md-5">
                    <label for="inputCity">Slug</label>
                    <input name="slug" id="slug" type="text" class="form-control">
                </div>
                <div class="form-group col-md-5">
                    <label for="inputCity">Descrição</label>
                    <input name="descricao" id="descricao" placeholder="descrição" type="text" class="form-control">
                </div>
                <div class="form-group col-md-5">
                    <label for="inputCity">Conteudo</label>
                    <textarea name="conteudo" id="conteudo" type="text" class="form-control"></textarea>
                </div>
                <div class="form-group col-md-5">
                    <label for="categoria">Categoria</label>
                    <select name="categoria" class="custom-select">
                        {{#each categorias}}
                            <option value="{{id}}">{{nome}}</option>
                            {{else}}
                            <option>nenhuma categoria encontrada</option>
                        {{/each}}
                    </select>

                </div>
                <div class="form-group col-md-2">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn btn-success form-control">Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>