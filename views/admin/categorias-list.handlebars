<h2>Categorias</h2>
<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">

        <span class="badge badge-success badge-pill"><a class="btn text-muted" href="categorias/adicionar-categoria">+ categoria</a>
</span>
    </li>
</ul>
{{#each categorias}}
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><b> Nome: </b>{{nome}}</span> <span><b> Slug: </b>{{slug}} </span> <span><b> Data criação: </b>{{data}}</span>
            <span class="badge badge-info badge-pill"><a  class="btn text-muted" href="/admin/categorias/editar-categoria/{{id}}">editar</a> </span>
        </li>
    </ul>

{{else}}
    <p class="text-muted">não existem categorias para listar</p>
{{/each}}
