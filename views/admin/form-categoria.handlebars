<div class="card">
    <div class="card-body">
        <h4 class="text-muted">Criar Categoria</h4>
        {{#each erros}}
            <div class="alert alert-danger">
                {{texto}}
            </div>
        {{else}}
        {{/each}}

        <form action="/admin/categorias/adicionar-categoria" method="post">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="inputCity">Nome</label>
                    <input name="nome" id="nome" placeholder="nome da categoria" type="text" class="form-control">
                </div>
                <div class="form-group col-md-5">
                    <label for="inputCity">Slug</label>
                    <input name="slug" id="slug" type="text" class="form-control">
                </div>
                <div class="form-group col-md-2">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn btn-success form-control">Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>